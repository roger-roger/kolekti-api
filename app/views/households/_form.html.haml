= simple_form_for @household do |f|
  - if @household.errors.any?
    #error_explanation
      %h2= "#{pluralize(@household.errors.count, "error")} prohibited this household from being saved:"
      %ul
        - @household.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name
  .actions
    = f.button :submit
